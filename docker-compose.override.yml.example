# Example override file for local development
# Copy this to docker-compose.override.yml and customize as needed
# docker-compose.override.yml is automatically loaded by docker-compose

version: '3.8'

services:
  app:
    environment:
      # Enable SQL logging for debugging
      SPRING_JPA_SHOW_SQL: "true"
      SPRING_JPA_PROPERTIES_HIBERNATE_FORMAT_SQL: "true"
      # Add debug logging
      LOGGING_LEVEL_COM_HUNESION: DEBUG
    volumes:
      # Mount source code for hot reload (if using Spring DevTools)
      - ./src:/app/src
    # Override command for development
    # command: ["java", "-jar", "app.jar", "--spring.profiles.active=dev"]

